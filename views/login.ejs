<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login - Coatcard AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            overflow: hidden;
        }
        .bg-gradient-animation {
            background: linear-gradient(-45deg, #fef3c7, #fde68a, #facc15, #eab308);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="bg-gradient-animation flex items-center justify-center min-h-screen p-4">
    <div class="glass-card rounded-3xl p-8 max-w-md w-full">
        
        <div class="text-center mb-6">
            <h2 id="form-title" class="text-3xl font-bold text-yellow-900 transition-all duration-500">Sign In</h2>
            <div id="message-area" class="text-center mt-4 min-h-[60px]">
                 <% if (locals.msg) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                        <span class="block sm:inline"><%= msg %></span>
                        <% if (locals.showVerifyLink) { %>
                            <a href="/verify?email=<%= encodeURIComponent(locals.email || '') %>" class="block font-bold text-blue-600 hover:text-blue-800 mt-2">Click here to verify</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Sliding Container -->
        <div class="relative overflow-hidden">
            <div id="slider" class="flex transition-transform duration-500 ease-in-out">

                <!-- Password Login View -->
                <div id="password-login-view" class="w-full flex-shrink-0">
                    <form class="space-y-6" action="/auth/login" method="POST">
                        <div class="space-y-4">
                            <input id="email-address" name="email" type="email" required class="w-full px-4 py-3 bg-white/50 border border-yellow-300 rounded-lg text-yellow-900 placeholder-amber-700 focus:outline-none focus:ring-2 focus:ring-yellow-900" placeholder="Email address" value="<%= locals.email || '' %>">
                            <input id="password" name="password" type="password" required class="w-full px-4 py-3 bg-white/50 border border-yellow-300 rounded-lg text-yellow-900 placeholder-amber-700 focus:outline-none focus:ring-2 focus:ring-yellow-900" placeholder="Password">
                        </div>
                        <div class="text-right text-sm">
                            <a href="/forgot" class="font-medium text-amber-800 hover:text-yellow-900">Forgot password?</a>
                        </div>
                        <div>
                            <button type="submit" class="w-full py-3 px-4 bg-yellow-900 text-white font-bold rounded-lg shadow-lg hover:bg-black transform hover:-translate-y-0.5 transition-all duration-300">
                                Sign In
                            </button>
                        </div>
                    </form>
                    <div class="relative flex py-4 items-center">
                        <div class="flex-grow border-t border-yellow-300"></div>
                        <span class="flex-shrink mx-4 text-amber-800 text-sm">Or</span>
                        <div class="flex-grow border-t border-yellow-300"></div>
                    </div>
                    <button id="show-otp-btn" class="w-full py-3 px-4 bg-white/80 text-yellow-900 font-bold rounded-lg shadow-lg hover:bg-white transform hover:-translate-y-0.5 transition-all duration-300">
                        Sign in with OTP
                    </button>
                </div>

                <!-- OTP Login View -->
                <div id="otp-login-view" class="w-full flex-shrink-0">
                     <p class="text-center text-sm text-amber-800 -mt-4 mb-6">Enter your email to receive a login code.</p>
                    <form class="space-y-6" action="/auth/request-otp-login" method="POST">
                        <div class="rounded-md shadow-sm">
                            <input id="otp-email" name="email" type="email" required class="w-full px-4 py-3 bg-white/50 border border-yellow-300 rounded-lg text-yellow-900 placeholder-amber-700 focus:outline-none focus:ring-2 focus:ring-yellow-900" placeholder="Email address" value="<%= locals.email || '' %>">
                        </div>
                        <div>
                            <button type="submit" class="w-full py-3 px-4 bg-yellow-900 text-white font-bold rounded-lg shadow-lg hover:bg-black transform hover:-translate-y-0.5 transition-all duration-300">
                                Send Login Code
                            </button>
                        </div>
                    </form>
                    <div class="relative flex py-4 items-center">
                        <div class="flex-grow border-t border-yellow-300"></div>
                        <span class="flex-shrink mx-4 text-amber-800 text-sm">Or</span>
                        <div class="flex-grow border-t border-yellow-300"></div>
                    </div>
                     <button id="show-password-btn" class="w-full py-3 px-4 bg-white/80 text-yellow-900 font-bold rounded-lg shadow-lg hover:bg-white transform hover:-translate-y-0.5 transition-all duration-300">
                        Sign in with Password
                    </button>
                </div>
            </div>
        </div>
        
        <p class="text-center text-sm mt-8">
            Don't have an account? <a href="/register" class="font-bold text-yellow-900 hover:underline">Register here</a>
        </p>
    </div>

    <script>
        const slider = document.getElementById('slider');
        const showOtpBtn = document.getElementById('show-otp-btn');
        const showPasswordBtn = document.getElementById('show-password-btn');
        const formTitle = document.getElementById('form-title');

        showOtpBtn.addEventListener('click', () => {
            slider.style.transform = 'translateX(-100%)';
            formTitle.textContent = 'Sign in with OTP';
        });

        showPasswordBtn.addEventListener('click', () => {
            slider.style.transform = 'translateX(0%)';
            formTitle.textContent = 'Sign In';
        });

        document.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const messageArea = document.getElementById('message-area');
            if (urlParams.get('status') === 'password_reset_success') {
                messageArea.innerHTML = `<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">Password has been reset successfully. Please log in.</div>`;
            } else if (urlParams.get('status') === 'verified') {
                 messageArea.innerHTML = `<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">Your account has been verified. Please log in.</div>`;
            }
        });
    </script>
</body>
</html>
