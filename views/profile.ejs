<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Edit Profile - Coatcard AI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            overflow-y: auto;
        }
        .bg-gradient-animation {
            background: linear-gradient(-45deg, #fef3c7, #fde68a, #facc15, #eab308);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .file-input-label {
            display: block;
            padding: 0.75rem 1.25rem;
            border-radius: 0.5rem;
            background-color: rgba(255, 255, 255, 0.5);
            border: 1px solid #fde68a;
            color: #92400e;
            cursor: pointer;
            transition: background-color 0.2s;
            text-align: center;
        }
        .file-input-label:hover {
            background-color: rgba(255, 255, 255, 0.8);
        }
    </style>
</head>
<body class="bg-gradient-animation min-h-screen flex items-center justify-center py-12 px-4">
    <div class="glass-card rounded-3xl p-8 max-w-4xl w-full space-y-8">
        <div class="flex items-center space-x-4">
            <a href="/chat" class="text-amber-800 hover:text-yellow-900 font-semibold transition-colors">&larr; Back to Chat</a>
            <h2 class="text-3xl font-bold text-yellow-900">Edit Your Profile</h2>
        </div>

        <% if (locals.msg) { %>
            <div class="bg-<%= locals.msgType === 'success' ? 'green' : 'red' %>-100 border-l-4 border-<%= locals.msgType === 'success' ? 'green' : 'red' %>-500 text-<%= locals.msgType === 'success' ? 'green' : 'red' %>-700 p-4" role="alert">
                <p class="font-bold"><%= locals.msgType === 'success' ? 'Success' : 'Error' %></p>
                <p><%= msg %></p>
            </div>
        <% } %>

        <form class="space-y-8" action="/profile" method="POST" enctype="multipart/form-data">
            
            <section>
                <h3 class="text-xl font-bold text-yellow-900 border-b-2 border-yellow-400 pb-2 mb-6">Personal Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <div>
                        <label for="username" class="block text-sm font-medium text-amber-800">Username</label>
                        <input id="username" name="username" type="text" required class="mt-1 w-full px-4 py-3 bg-white/50 border border-yellow-300 rounded-lg text-yellow-900 placeholder-amber-700 focus:outline-none focus:ring-2 focus:ring-yellow-900" value="<%= user.username %>">
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-amber-800">Email (cannot be changed)</label>
                        <input id="email" name="email" type="email" disabled class="mt-1 w-full px-4 py-3 bg-gray-200/50 border border-yellow-300 rounded-lg text-gray-500 cursor-not-allowed">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-amber-800">Current Profile Picture</label>
                        <img src="<%= user.profileImage %>" alt="Profile Picture" class="mt-2 h-24 w-24 rounded-full object-cover border-2 border-white shadow-md">
                    </div>
                    <div>
                        <label for="profileImage" class="block text-sm font-medium text-amber-800">Upload New Picture</label>
                        <label for="profileImage" class="file-input-label mt-2">
                            <span id="file-name">Choose a file...</span>
                        </label>
                        <input id="profileImage" name="profileImage" type="file" class="sr-only" accept="image/*">
                        <p class="text-xs text-amber-800/80 mt-1">Max size: 5MB.</p>
                    </div>
                </div>
            </section>

            <section>
                <h3 class="text-xl font-bold text-yellow-900 border-b-2 border-yellow-400 pb-2 mb-6">AI Preferences</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <div>
                        <label for="language" class="block text-sm font-medium text-amber-800">Preferred Coding Language</label>
                        <select id="language" name="language" class="mt-1 w-full px-4 py-3 bg-white/50 border border-yellow-300 rounded-lg text-yellow-900 focus:outline-none focus:ring-2 focus:ring-yellow-900">
                            <option <%= user.preferences.language === 'C++' ? 'selected' : '' %>>C++</option>
                            <option <%= user.preferences.language === 'Java' ? 'selected' : '' %>>Java</option>
                            <option <%= user.preferences.language === 'Python' ? 'selected' : '' %>>Python</option>
                            <option <%= user.preferences.language === 'JavaScript' ? 'selected' : '' %>>JavaScript</option>
                        </select>
                    </div>
                    <div>
                        <label for="explanationStyle" class="block text-sm font-medium text-amber-800">Explanation Style</label>
                        <select id="explanationStyle" name="explanationStyle" class="mt-1 w-full px-4 py-3 bg-white/50 border border-yellow-300 rounded-lg text-yellow-900 focus:outline-none focus:ring-2 focus:ring-yellow-900">
                            <option value="bullet" <%= user.preferences.explanationStyle === 'bullet' ? 'selected' : '' %>>Bullet Points</option>
                            <option value="paragraph" <%= user.preferences.explanationStyle === 'paragraph' ? 'selected' : '' %>>Paragraphs</option>
                        </select>
                    </div>
                </div>
            </section>

            <div class="pt-4 border-t border-yellow-300/50">
                <button type="submit" id="saveBtn" class="w-full py-3 px-4 bg-yellow-900 text-white font-bold rounded-lg shadow-lg hover:bg-black transform hover:-translate-y-0.5 transition-all duration-300">
                    Save Changes
                </button>
            </div>
        </form>
    </div>

    <script>
        // Script to show the name of the uploaded file
        document.getElementById('profileImage').addEventListener('change', function () {
            const fileName = this.files[0] ? this.files[0].name : "Choose a file...";
            document.getElementById('file-name').textContent = fileName;
        });

        // Script to show a saving state on the button
        document.querySelector('form').addEventListener('submit', function () {
            const btn = document.getElementById('saveBtn');
            btn.disabled = true;
            btn.innerHTML = 'Saving...';
        });
    </script>
</body>
</html>
